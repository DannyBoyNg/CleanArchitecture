{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Seq", "Serilog.Enrichers.ClientInfo" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "fileSizeLimitBytes": "2000000", //2mb
          "rollingInterval": "Month",
          "retainedFileCountLimit": 120, //10years
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithClientIp", "WithClientAgent", "WithMachineName" ],
    "Properties": {
      "Application": "CleanArchitecture"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database_production": "Server=localhost;Database=CleanArchitecture;Trusted_Connection=True;"
  },
  "Jwt": {
    "Issuer": "https://issuer",
    "Audience": "https://audience",
    "Key": "SuperSecretKeyThatYouWillNeverCommitToGithub"
  }
}
